.my--page__contents__box
  .my--page__contents__box--select
    = render 'users/my-page_side-menu'

  .my--page__contents__box--allert
    = render 'users/my-page_user-icon'

    .address-form
      %h3.address-form__title
        発送元・お届け先 住所変更
      .address-form__input-info
        = form_with model: [@user, @address], url: user_address_path, local: true do |f|
          .address-form__input-name
            .address-form__input-name__set
              .address-form__input-name__set__child
                .address-form__input-name__set__child--title
                  姓
                .address-form__input-name__set__child--required
                  必須
              = f.text_field :dest_last_name, value: @address.dest_last_name, class: 'address-form__input-name__set__field'
            .address-form__input-name__set
              .address-form__input-name__set__child
                .address-form__input-name__set__child--title
                  名
                .address-form__input-name__set__child--required
                  必須
              = f.text_field :dest_first_name, value: @address.dest_first_name, class: 'address-form__input-name__set__field'
          .address-form__input-name
            .address-form__input-name__set
              .address-form__input-name__set__child
                .address-form__input-name__set__child--title
                  セイ（全角カナ）
                .address-form__input-name__set__child--required
                  必須
              = f.text_field :dest_last_name_kana, value: @address.dest_last_name_kana, class: 'address-form__input-name__set__field'
            .address-form__input-name__set
              .address-form__input-name__set__child
                .address-form__input-name__set__child--title
                  メイ（全角カナ）
                .address-form__input-name__set__child--required
                  必須
              = f.text_field :dest_first_name_kana, value: @address.dest_first_name_kana, class: 'address-form__input-name__set__field'
          .address-form__input-info__label
            .address-form__input-info__label__set
              〒郵便番号
            .address-form__input-info__label--required
              必須
          = f.text_field :zip_code, value: @address.zip_code, class: 'address-form__input-info__field'
          .address-form__input-info__label
            .address-form__input-info__label__set
              都道府県
            .address-form__input-info__label--required
              必須
          .address-form__input-info__field
            = f.select :prefecture, Address.prefectures.keys.map{|k| [I18n.t("enums.address.prefecture.#{k}"), k]}, {selected: @address.prefecture}
          .address-form__input-info__label
            .address-form__input-info__label__set
              市区町村
            .address-form__input-info__label--required
              必須
          = f.text_field :city, value: @address.city, class: 'address-form__input-info__field'
          .address-form__input-info__label
            .address-form__input-info__label__set
              番地
            .address-form__input-info__label--required
              必須
          = f.text_field :block_number, value: @address.block_number, class: 'address-form__input-info__field'
          .address-form__input-info__label
            .address-form__input-info__label__set
              建物名・部屋
            .address-form__input-info__label--unrequired
              任意
          = f.text_field :building, value: @address.building, class: 'address-form__input-info__field'
          .address-form__input-info__label
            .address-form__input-info__label__set
              電話番号（ハイフンなし）
            .address-form__input-info__label--unrequired
              任意
          = f.text_field :telephone, value: @address.telephone, class: 'address-form__input-info__field'
          = f.submit "発送元・お届け先住所を変更する", class: 'address-form__input-info__action-button'